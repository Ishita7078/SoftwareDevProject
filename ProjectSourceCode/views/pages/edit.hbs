{{> nav}}
{{#if message}}
  <p>{{message}}</p>
{{/if}}

<h3 class = "pageTitle">Edit Profile</h3>

<form action="/edit" method="POST">
  <div>
    <label>Name:</label>
    <input type="text" name="name" value="{{user.name}}" required>
  </div>

  <div>
    <label>Email:</label>
    <input type="email" name="email" value="{{user.email}}" required>
  </div>

  <div>
    <label>Gender:</label>
    <select name="gender">
      <option value="M" {{#if (eq user.gender 'M')}}selected{{/if}}>Male</option>
      <option value="F" {{#if (eq user.gender 'F')}}selected{{/if}}>Female</option>
      <option value="O" {{#if (eq user.gender 'O')}}selected{{/if}}>Other</option>
    </select>
  </div>

  <div>
    <label>Age:</label>
    <input type="number" name="age" value="{{user.age}}">
  </div>

  <button type="submit">Update Profile</button>
</form>