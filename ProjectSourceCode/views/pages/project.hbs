<div class="homepage">
  <header class="header">
    <h3 class="pageTitle">Projects</h3>
    <!-- Updated New Project Button -->
    <button id="newProjectBtn" class="genericbutton">New Project</button>
  </header>

  <!-- Existing Projects -->
  <div id="projectsContainer" class="project-container">
    <div class="project-card">
      <img src="/img/defaultProjectPhoto.jpg" alt="Project 1" class="project-image" />
      <h2 class = "projectTitle"><a href="/overview">The Whiteboard</a></h2>
    </div>
    <div class="project-card">
      <img src="/img/defaultProjectPhoto.jpg" alt="Project 2" class="project-image" />
      <h2 class = "projectTitle"><a href="/overview">Project 2</a></h2>
    </div>
    <div class="project-card">
      <img src="/img/defaultProjectPhoto.jpg" alt="Project 3" class="project-image" />
      <h2 class = "projectTitle"><a href="/overview">Project 3</a></h2>
    </div>
  </div>

  <!-- Modal for Adding New Projects -->
  <div id="projectModal" class="hidden modal">
    <div class="modal-content">
      <form id="projectForm">
        <label for="projectName">Project Name:</label>
        <input class = "teamTextBox" type="text" id="projectName" name="projectName" required>
        <button type="submit" class="genericbutton">Add Project</button>
      </form>
      <button id="closeModal" class="close-button">Close</button>
    </div>
  </div>
</div>


<script src="/js/project.js"></script>

