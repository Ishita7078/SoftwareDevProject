<!doctype html>
<html>
 <head>
   <div class = "header">
  <h3 class ="pageTitle">Calendar</h3>
  </div>
   <!-- Bootstrap CSS library -->
   <link
   href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
   rel="stylesheet"
   integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
   crossorigin="anonymous"
   />
   <!-- Bootstrap icons library -->
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
   <!-- Custom CSS for the calendar -->
   <link rel="stylesheet" href="/css/style.css" /> 
 </head>

 <body onload="initializeCalendar()">
   <div class="container">
     <div id="calendar" class="row"></div>
   </div>

   <!-- Modal for Event Details -->
   <div class="modal" tabindex="-1" id="event-modal">
     <div class="modal-dialog">
       <div class="modal-content">
         <div class="modal-header">
           <h5 class="modal-title">Event Details</h5>
           <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
           <form>
             <div class="mb-3">
               <label for="event_name" class="form-label">Event Name</label>
               <input type="text" class="form-control" id="event_name" placeholder="Enter event name" required>
             </div>
             <div class="mb-3">
               <label for="event_weekday" class="form-label">Weekday</label>
               <select class="form-control" id="event_weekday" required>
                 <option value="" disabled selected>Select a day</option>
                 <option value="monday">Monday</option>
                 <option value="tuesday">Tuesday</option>
                 <option value="wednesday">Wednesday</option>
                 <option value="thursday">Thursday</option>
                 <option value="friday">Friday</option>
                 <option value="saturday">Saturday</option>
                 <option value="sunday">Sunday</option>
               </select>
             </div>
             <div class="mb-3">
               <label for="event_time" class="form-label">Time</label>
               <input type="time" class="form-control" id="event_time" required>
             </div>
             <div class="mb-3">
               <label for="event_modality" class="form-label">Event Modality</label>
               <select class="form-control" id="event_modality" required onchange="updateLocationOptions(this.value)">
                 <option value="in-person" default>In Person</option>
                 <option value="remote">Remote</option>
               </select>
             </div>
             <div class="mb-3" id="location-container">
               <label for="event_location" class="form-label">Location</label>
               <input type="text" class="form-control" id="event_location" placeholder="Enter event location">
             </div>
             <div class="mb-3 d-none" id="remote-url-container">
               <label for="event_url" class="form-label">Remote URL</label>
               <input type="url" class="form-control" id="event_url" placeholder="Enter remote URL">
             </div>
             <div class="mb-3">
               <label for="event_attendees" class="form-label">Attendees</label>
               <input type="text" class="form-control" id="event_attendees" placeholder="Enter attendees, comma-separated">
             </div>
           </form>
         </div>
         <div class="modal-footer">
           <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
           <button type="submit" id="submit_button" class="genericbutton">Create Event</button>
         </div>
       </div>
     </div>
   </div>

   <!-- Bootstrap JS and custom JavaScript for the calendar -->
   <script src="/js/calendar.js"></script> 
 </body>
</html>
