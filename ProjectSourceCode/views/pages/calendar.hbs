<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
    <!-- Include Bootstrap CSS and other styles as needed -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"> <!-- Calendar-specific styles -->
</head>
<body onload="initializeCalendar()">
    <div class="container">
        <h1 class="text-center my-4">Event Calendar</h1>
        <div id="calendar" class="row"></div>
    </div>

    <!-- Event Modal -->
    <div class="modal fade" id="event-modal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalLabel">Event Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Event form goes here -->
                    <!-- Example: Event Name, Date, Time, etc. -->
                    <form id="event-form">
                        <!-- Include form elements for event details -->
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and your custom calendar.js script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/calendar.js"></script> <!-- Path to your calendar.js -->
</body>
</html>